<div class="user-index-body">


<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<h2>User info</h2>
			<table class="table teble-striped">
			<tr>
				<%= attachment_image_tag current_user, :image, :fill, 100, 100,  fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"%>

			</tr>
			<tr>
				<th><p>Name</p></th>
				<th><%= current_user.name %></th>
			</tr>
			<tr>
				<div class="introduction">
				<th><p>Introduction</p></th>
				<th><%= current_user.introduction %></th>
				</div>
			</tr>
			<tr>
				<div class="edit-enter">
				<%= link_to edit_user_path(current_user), class:"btn btn-mini btn-default" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
				</div>
			</tr>
			</tr>
						<tr>
				<th><h2>New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@book) do |f| %>

					<p>Title</p>
					<%= f.text_field :title %>

					<p>Body</p>
					<%= f.text_area :body %>

					<%= f.submit 'Create Book' %>

				<% end %></th>
			</tr>
			</table>
		</div>
		<div class="col-lg-9">
			<h1 class="index">Users</h1>
			<table class="table teble-striped">
				<tr>
					<th><p>image</p></th>
					<th><p>name</p></th>
					<th><p></p></th>
				</tr>
              <% @users.each do |user| %>
			  <tr>
			  	<td><%= user.image %></td>
				<td><%= user.name %></td>
				<td><%#= link_to "Show", topic_path(book.id) %></td>
			  </tr>

   
			<% end %>
			</table>
		</div>
	</div>
</div>


</div>