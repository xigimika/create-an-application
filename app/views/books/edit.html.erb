<div class="edit-body">
	<div class="col-lg-3"></div>
	<div class="col-lg-9">
		<h1 class="edit-top">Editing Book</h1>
		<%= form_for(@book) do |f| %>
	</div>

	<div class="edit-text">
		<p>Title</p>
		<%= f.text_field :title, class: "col-xs-12" %>
	</div>
    <div class="edit-text">
    	<p>Body</p>
    	<%= f.text_area :body, class: "col-xs-12" %><br>
    </div>
    <div  class="edit-text">
    	<input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
	</div>


	<% end %>

	<div class="edit-enter-book">
		<%= link_to "Show | ", topic_path(@book.id) %>
		<%= link_to "Back", books_path %>
	</div>
</div>