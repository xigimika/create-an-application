					</div>
				</tr>
				</table>
					<div class="edit-enter">
					<%= link_to edit_user_path(current_user), class:"col-xs-12 btn btn-mini btn-default" do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>
					</div>
