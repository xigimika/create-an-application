<body class="index-body">
<h1 class="index">Books</h1>

<table>
	<tr>
		<th><p>Title</p></th>
		<th><p>Body</p></th>
		<th><p></p></th>
	</tr>


<% @books.each do |book| %>
<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to "Edit", edit_book_path(book.id) %></td>
	<td><%= link_to "Show", topic_path(book.id) %></td>
	<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %><br></td>
</tr>


<% end %>
</table>




<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>

</body>